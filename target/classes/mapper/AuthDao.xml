<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.task.dao.AuthDao">

    <insert id="add" parameterType="com.project.task.dto.AuthDto" useGeneratedKeys="true" keyProperty="id">
        insert into task.auth
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="email != null and email != ''">email,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="status != null and status!= ''">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="email != null and email != ''">#{email},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="status != null and status !=''">#{status},</if>
        </trim>
    </insert>

    <select id="findCodeByEmail" resultType="com.project.task.dto.AuthDto" parameterType="com.project.task.dto.AuthDto">
        SELECT  a.id as id,
        a.email as email,
        a.code as code,
        a.status as status
        FROM task.auth a
        where
                a.email = #{email}
                and a.code = #{code}
                and a.type = #{type}
                and a.status = 1
        order by a.id desc limit 1
    </select>

    <select id="get" resultType="com.project.task.dto.AuthDto" parameterType="com.project.task.dto.AuthDto">
        SELECT  id as id,
                email as email,
                code as code,
                type as type,
                status as status,
                create_time as createTime,
                update_time as updateTime
        FROM task.auth
        <where>
            1=1
            <if test="id != null and id != '' ">
             and id = #{id}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <update id="update" parameterType="com.project.task.dto.AuthDto">
        update task.auth
        <set>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>



</mapper>
