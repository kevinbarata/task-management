<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.teacher.dao.UserDao">

    <insert id="add" parameterType="com.project.teacher.dto.UserDto" useGeneratedKeys="true" keyProperty="id">
        insert into teacher.user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="email != null and email != ''">email,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="username != null and username != ''">username,</if>
            <if test="password != null and password != ''">password,</if>
            <if test="remark != null and remark!= ''">remark,</if>
            <if test="status != null and status!= ''">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="email != null and email != ''">#{email},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="username != null and username != ''">#{username},</if>
            <if test="password != null and password != ''">#{password},</if>
            <if test="remark != null and remark !=''">#{remark},</if>
            <if test="status != null and status !=''">#{status},</if>
        </trim>
    </insert>

    <select id="get" resultType="com.project.teacher.dto.UserDto" parameterType="com.project.teacher.dto.UserDto">
        SELECT  id as id,
                email as email,
                phone as phone,
                username as username,
                password as password,
                remark as remark,
                status as status,
                create_time as createTime,
                update_time as updateTime
        FROM teacher.user
        <where>
            1=1
            <if test="id != null and id != '' ">
             and id = #{id}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <select id="getUserByPassword" resultType="com.project.teacher.dto.UserDto" parameterType="com.project.teacher.dto.UserDto">
        SELECT  id as id,
        email as email,
        phone as phone,
        username as username,
        password as password,
        remark as remark,
        status as status,
        create_time as createTime,
        update_time as updateTime
        FROM teacher.user
        <where>
            1=1
            <if test="id != null and id != '' ">
                and id = #{id}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>

            and status = 1

        </where>
        limit 1
    </select>

    <update id="update" parameterType="com.project.teacher.dto.UserDto">
        update teacher.user
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="merk != null and merk != ''">merk = #{merk},</if>
            <if test="qty != null and merk != ''">qty = #{qty},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="changePassword" parameterType="com.project.teacher.dto.UserDto">
        update teacher.user
        <set>
            <if test="password != null and password != ''">password = #{password},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
